<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LightGrey">

    <TextView
        android:id="@+id/HomeText"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="111dp"
        android:layout_marginStart="111dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:fontFamily="@font/playfair_display_bold"
        android:inputType="none"
        android:text="@string/HomeText"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ProfileButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/playfair_display_bold"
        android:text="@string/ProfileButton"
        android:onClick="openUserProfileUI"
        android:background="@color/ReseneNeptune"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HomeText" />

    <Button
        android:id="@+id/MapButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/playfair_display_bold"
        android:text="@string/MapButton"
        android:background="@color/ReseneNeptune"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProfileButton" />

    <Button
        android:id="@+id/EventsButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:onClick="openEvents"
        android:fontFamily="@font/playfair_display_bold"
        android:text="@string/EventsButton"
        android:background="@color/ReseneNeptune"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MapButton" />

    <Button
        android:id="@+id/UserSearchButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:onClick="openUserSearch"
        android:fontFamily="@font/playfair_display_bold"
        android:text="@string/UserSearchButton"
        android:background="@color/ReseneNeptune"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EventsButton" />

    <Button
        android:id="@+id/MessagesButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/playfair_display_bold"
        android:text="@string/MessagesButton"
        android:onClick="openMessaging"
        android:background="@color/ReseneNeptune"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HomeText" />

    <Button
        android:id="@+id/VoiceCallButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="20dp"
        android:background="@color/ReseneNeptune"
        android:fontFamily="@font/playfair_display_bold"
        android:text="@string/VoiceCallButton"
        android:onClick="openVoiceCall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MessagesButton" />

    <Button
        android:id="@+id/FrequentContactsButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/playfair_display_bold"
        android:text="@string/FrequentContactsButton"
        android:onClick="openFrequentContacts"
        android:background="@color/ReseneNeptune"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/VoiceCallButton" />

    <Button
        android:id="@+id/SettingsButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/playfair_display_bold"
        android:text="@string/SettingsButton"
        android:onClick="openSettings"
        android:background="@color/ReseneNeptune"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FrequentContactsButton" />
</android.support.constraint.ConstraintLayout>
